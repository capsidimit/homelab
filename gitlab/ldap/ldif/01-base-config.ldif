# -----------------------------------------------------------------------------
# Global Configuration
# -----------------------------------------------------------------------------
dn: cn=config
objectClass: olcGlobal
cn: config
olcLogLevel: stats config ACL
olcSaslSecProps: noanonymous,minssf=0
olcTLSCACertificateFile: /etc/ldap/certs/ca.pem
olcTLSCertificateFile: /etc/ldap/certs/cert.pem
olcTLSCertificateKeyFile: /etc/ldap/certs/key.pem
olcTLSVerifyClient: never
olcThreads: 4
olcIdleTimeout: 300
olcWriteTimeout: 600


# -----------------------------------------------------------------------------
# Load Core Modules
# -----------------------------------------------------------------------------
dn: cn=module{0},cn=config
objectClass: olcModuleList
cn: module{0}
olcModulePath: /usr/lib/openldap
olcModuleLoad: back_mdb.la
olcModuleLoad: memberof.la
olcModuleLoad: ppolicy.la


# -----------------------------------------------------------------------------
# Load Core Schemas
# -----------------------------------------------------------------------------
dn: cn=schema,cn=config
objectClass: olcSchemaConfig
cn: schema

include: file:///etc/openldap/schema/core.ldif

# Schema: cosine (общие атрибуты)
include: file:///etc/openldap/schema/cosine.ldif

# Schema: inetorgperson (для пользователей)
include: file:///etc/openldap/schema/inetorgperson.ldif

# Schema: nis (для POSIX атрибутов, если понадобится)
include: file:///etc/openldap/schema/nis.ldif